/*Modify the program detab 
accept a list of tab stops as arguments. Use the default tab settings if there are no arguments.  */
#include <stdio.h>
#include <stdlib.h>

#define DEFAULT_TAB 8
#define MAXTABS 100

int tabstops[MAXTABS];
int ntabs = 0;

int next_tabstop(int col) {
    if (ntabs == 0)
        return ((col / DEFAULT_TAB) + 1) * DEFAULT_TAB;
    for (int i = 0; i < ntabs; i++)
        if (tabstops[i] > col)
            return tabstops[i];
    return ((col / DEFAULT_TAB) + 1) * DEFAULT_TAB;
}

int main(int argc, char *argv[]) {
    int c, col = 0;

    for (int i = 1; i < argc && ntabs < MAXTABS; i++) {
        int t = atoi(argv[i]);
        if (t > 0)
            tabstops[ntabs++] = t;
    }

    for (int i = 0; i < ntabs - 1; i++)
        for (int j = i + 1; j < ntabs; j++)
            if (tabstops[i] > tabstops[j]) {
                int tmp = tabstops[i];
                tabstops[i] = tabstops[j];
                tabstops[j] = tmp;
            }

    while ((c = getchar()) != EOF) {
        if (c == '\t') {
            int next = next_tabstop(col);
            while (col < next) {
                putchar(' ');
                col++;
            }
        } else if (c == '\n') {
            putchar(c);
            col = 0;
        } else {
            putchar(c);
            col++;
        }
    }
    return 0;
}
/*output
a       b
a       b
a\tb
a\tb
abcdef                          bhj
abcdef                          bhj
